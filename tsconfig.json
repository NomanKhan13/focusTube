{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*", "index.js", "app.js"],
  "exclude": ["dist", "node_modules"]
}
